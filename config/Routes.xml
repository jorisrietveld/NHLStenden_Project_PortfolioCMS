<?xml version="1.0" encoding="UTF-8" ?>
<routes>

    <!-- Un authorized public routes. -->
    <route id="Home" path="/home" methods="GET|POST" authorization="ANONYMOUS_USER">
        <action id="controller">Home:index</action>
    </route>

    <route id="Login" path="/login" methods="GET|POST" authorization="ANONYMOUS_USER">
        <action id="controller">Authentication:index</action>
    </route>

    <route id="logout" path="/logout" methods="GET|POST" authorization="ANONYMOUS_USER">
        <action id="controller">Authentication:logout</action>
    </route>

    <route id="Contact" path="/contact" methods="GET|POST" authorization="ANONYMOUS_USER">
           <action id="controller">Home:contact</action>
    </route>

    <route id="Register" path="/register" methods="GET|POST" authorization="ANONYMOUS_USER">
        <action id="controller">Authentication:register</action>
    </route>

    <route id="Portfolio" path="/portfolio/{student_name}" methods="GET" authorization="ANONYMOUS_USER">
        <action id="controller">Portfolio:index</action>
    </route>

    <route id="Portfolio" path="/portfolio/{student_name}/{page}" methods="GET" authorization="ANONYMOUS_USER">
        <action id="controller">Portfolio:index</action>
    </route>

    <route id="RawPortfolio" path="/raw/{student_name}" methods="POST|GET" authorization="ANONYMOUS_USER">
        <action id="controller">Raw</action>
    </route>

    <!-- Authorized user management routes. -->
    <route id="Admin" path="/admin/gebruikersOverzicht" methods="GET" authorization="ADMIN">
        <action id="controller">UserManagement:userOverview</action>
    </route>

    <route id="Admin" path="admin/addTeacher" methods="GET|POST" authorization="ADMIN">
        <action id="controller">UserManagement:insertTeacher</action>
    </route>

    <route id="Admin" path="admin/addStudent" methods="GET|POST" authorization="ADMIN">
        <action id="controller">UserManagement:insertStudent</action>
    </route>

    <route id="Admin" path="/admin/editStudent/{id}" methods="GET|POST" authorization="STUDENT">
        <action id="controller">UserManagement:editStudent</action>
    </route>

    <route id="Admin" path="/admin/editTeacher/{id}" methods="GET|POST" authorization="TEACHER">
        <action id="controller">UserManagement:editTeacher</action>
    </route>

    <!-- Authorized portfolio management -->
    <route id="Admin" path="/admin/portfolio" methods="GET" authorization="ADMIN">
        <action id="controller">Admin:portfolio</action>
    </route>

    <route id="Admin" path="/admin/thema" methods="GET" authorization="ADMIN">
        <action id="controller">Admin:thema</action>
    </route>

    <route id="Admin" path="/admin/cijferregistratie" methods="GET" authorization="ADMIN">
        <action id="controller">Admin:cijferregistratie</action>
    </route>

    <route id="error401" path="/401" methods="GET|POST|PUT|DELETE|CONNECT" authorization="ANONYMOUS_USER">
        <action id="controller">Error:error401</action>
    </route>

    <route id="Error404" path="/404" methods="GET|POST|PUT|DELETE" authorization="ANONYMOUS_USER">
        <action id="controller">Error:error404</action>
    </route>

    <route id="Error405" path="/405" methods="GET|POST|PUT|DELETE" authorization="ANONYMOUS_USER">
        <action id="controller">Error:error405</action>
    </route>

    <route id="Error500" path="/500" methods="GET|POST|PUT|DELETE" authorization="ANONYMOUS_USER">
        <action id="controller">Error:error500</action>
    </route>

    <route id="Error500" path="/500" methods="GET|POST|PUT|DELETE" authorization="ANONYMOUS_USER">
        <action id="controller">Error:error500</action></route>
</routes>