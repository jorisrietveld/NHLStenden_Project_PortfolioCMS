<?xml version="1.0" encoding="UTF-8" ?>
<routes>

    <route id="Home" path="/home" methods="GET|POST">
        <action id="controller">Home:index</action>
    </route>

    <route id="Portefolio" path="/portefolio/{student_name}" methods="GET">
        <action id="controller">Portefolio:index</action>
