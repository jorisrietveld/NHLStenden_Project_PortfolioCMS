<?xml version="1.0" encoding="UTF-8"?>

<phpunit
        processIsolation="false"
        stopOnFailure="false"
        syntaxCheck="false"
        backupGlobals="false"
        colors="true"
        bootstrap="vendor/autoload.php">
    <php>
        <ini name="error_reporting" value="-1" />
    </php>

    <testsuites>
        <testsuite name="Digitaal Portefolio Test suit">
            <directory>./Tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>./Tests</directory>
                <directory>./vendor</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>